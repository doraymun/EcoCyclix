    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Backend Server",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}\\server\\app.py",
                "FLASK_DEBUG": "1"
            },  
            "args": [
                "--app",
                "${workspaceFolder}\\server\\app",
                "run",
                "--debug",
                "--host=192.168.1.2"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}